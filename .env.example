# Central API endpoint for receiving ward/bed snapshot
API_RECEIVE_URL=

# Hospital code
HCODE=
# Shared token used by central API to authenticate this hospital
HCODE_TOKEN=
# Hospital latitude (optional)
LATITUDE=
# Hospital longitude (optional)
LONGITUDE=

# HIS system name (used for logging and HIS_PROFILE auto-detection)
HIS_NAME=
# HIS database type: mysql | mariadb | postgres
HIS_DB_TYPE=
# HIS query profile: hosxp_v3 | hosxp_v4
# If empty, profile is auto-detected from HIS_NAME (contains "v4" => hosxp_v4, otherwise hosxp_v3)
HIS_PROFILE=
# HIS database host/IP
HIS_DB_HOST=
# HIS database port (default 3306 if empty)
HIS_DB_PORT=
# HIS database username
HIS_DB_USER=
# HIS database password (can be empty)
HIS_DB_PASSWORD=
# HIS database name/schema
HIS_DB_NAME=

# Send interval in minutes
SEND_INTERVAL_MINUTES=
# Minute offset for schedule alignment (e.g. 5 => minute 05, 35, ...)
SEND_OFFSET_MINUTES=
# HTTP request timeout to central API (milliseconds)
REQUEST_TIMEOUT_MS=
# Retry attempts after initial failure (total attempts = RETRY_COUNT + 1)
RETRY_COUNT=
# Delay between retries (milliseconds)
RETRY_DELAY_MS=
